@model GT_regisztracio.Models.Szervezo

@{
    ViewData["Title"] = "Jelentkezés";
}

<h1>Jelentkezés</h1>

<h4>Szervező</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Jelentkezes">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vezeteknev" class="control-label"></label>
                <input asp-for="Vezeteknev" class="form-control" />
                <span asp-validation-for="Vezeteknev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Keresztnev" class="control-label"></label>
                <input asp-for="Keresztnev" class="form-control" />
                <span asp-validation-for="Keresztnev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Neptun" class="control-label"></label>
                <input asp-for="Neptun" class="form-control" />
                <span asp-validation-for="Neptun" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefon" class="control-label"></label>
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pozicio" class="control-label"></label>
                <select asp-for="Pozicio" class="form-control">
