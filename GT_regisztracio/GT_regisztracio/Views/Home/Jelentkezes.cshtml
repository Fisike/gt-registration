                    <option value="programos">Programos</option>
                </select>
                <span asp-validation-for="Pozicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bemutatkozas" class="control-label"></label>
                <textarea asp-for="Bemutatkozas" class="form-control" rows="10" ></textarea>
                <span asp-validation-for="Bemutatkozas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Megjegyzes" class="control-label"></label>
                <textarea asp-for="Megjegyzes" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Megjegyzes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
